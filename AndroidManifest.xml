<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ajdeguzman.debtnote"
    android:versionCode="3"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="false" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="com.ajdeguzman.debtnote.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ajdeguzman.debtnote.MenuPreference"
            android:label="@string/title_activity_menu_preference"
            android:icon="@drawable/ic_action_settings"
            android:parentActivityName="com.ajdeguzman.debtnote.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ajdeguzman.debtnote.MainActivity" />
        </activity>
        <activity
            android:name="com.ajdeguzman.debtnote.AddDebt"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="com.ajdeguzman.debtnote.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ajdeguzman.debtnote.MainActivity" />
        </activity>
        <activity
            android:name="com.ajdeguzman.debtnote.SingleDebt"
            android:parentActivityName="com.ajdeguzman.debtnote.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ajdeguzman.debtnote.MainActivity" />
        </activity>
        <activity
            android:name="com.ajdeguzman.debtnote.SinglePayment"
            android:parentActivityName="com.ajdeguzman.debtnote.SingleDebt"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ajdeguzman.debtnote.SingleDebt" />
        </activity>

        <service android:name="com.ajdeguzman.debtnote.service.ScheduleService" />
        <service android:name="com.ajdeguzman.debtnote.service.NotifyService" />

        <activity
            android:name="com.ajdeguzman.debtnote.AbstractPasscodeKeyboardActivity"
            android:label="@string/title_activity_abstract_passcode_keyboard" >
        </activity>
        <activity
            android:name="com.ajdeguzman.debtnote.MenuLockScreen"
            android:label="@string/title_activity_menu_lock_screen"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>
